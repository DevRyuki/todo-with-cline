{
  "name": "todo-with-cline",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "eslint src/**/*.ts && jest",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:components": "jest --testMatch=\"<rootDir>/src/features/**/components/**/*.test.{ts,tsx}\"",
    "test:services": "jest --testMatch=\"<rootDir>/src/features/**/services/**/*.test.{ts,tsx}\"",
    "test:handlers": "jest --testMatch=\"<rootDir>/src/features/**/handlers/**/*.test.{ts,tsx}\"",
    "test:hooks": "jest --testMatch=\"<rootDir>/src/features/**/hooks/**/*.test.{ts,tsx}\"",
    "test:fetchers": "jest --testMatch=\"<rootDir>/src/features/**/fetchers/**/*.test.{ts,tsx}\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "node src/db/migrate.js && npx drizzle-kit generate",
    "db:reset": "node src/db/reset.js",
    "db:studio": "drizzle-kit studio",
    "db:types": "drizzle-kit generate:types --out src/db/types",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:logs": "docker-compose logs -f postgres"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.8.0",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-slot": "^1.1.2",
    "@types/pg": "^8.11.11",
    "bcrypt": "^5.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.40.0",
    "lucide-react": "^0.483.0",
    "next": "^14.2.24",
    "next-auth": "^4.24.7",
    "pg": "^8.13.3",
    "react": "^18",
    "react-dom": "^18",
    "resend": "^4.1.2",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/supertest": "^6.0.2",
    "drizzle-kit": "^0.30.5",
    "eslint": "^8",
    "eslint-config-next": "14.2.18",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "msw": "^2.7.3",
    "postcss": "^8",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
